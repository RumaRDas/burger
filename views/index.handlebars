<div class="container">
<h1>Burgers!</h1>

<div class="row">

<div class="col-6">
<h2>Burgers to Eat</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="col-6">
<h2>Burgers to Delevered</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
<div class="row">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="newBurger">Berger Name:</label>
    <input type="text" id="newBurger" name="burger_name">
  </div>
  <button type="submit">Add Burger</button>
</form>
</div>
</div>